#!/usr/bin/env python

import subprocess
import time

def main():
    while True:
        update()
        time.sleep(1)
def update():
    update_gpu()

def update_gpu():
    cmd = [
        "nvidia-smi",
        "--format=csv,noheader",
        "--query-gpu",
        "temperature.gpu,utilization.gpu,clocks.current.graphics,utilization.memory,clocks.current.memory,power.draw",
    ]
    stat = subprocess.check_output(cmd)
    t, g, gf, m, mf, w = stat.decode().replace(' ', '').strip().split(',')
    ti = list('ï‹‹ï‹Šï‹‰ï‹ˆï‹‡')[(int(t) - 40) // 60]
    w = int(float(w[:-1]))
    g = int(g[:-1])
    m = int(m[:-1])
    gf = int(gf[:-3]) / 1000
    mf = int(mf[:-3]) / 1000

    with open('/home/sheffler/.local/sys/gpu', 'w') as out:
        out.write(f'{ti}{t}Â°C ğ’ˆ{g}ó°°|{gf:1.1f}ghz î‰¦ {m:2}ó°°|{mf:1.1f}ghz ó±‹{w}w')

if __name__ == '__main__':
    main()
